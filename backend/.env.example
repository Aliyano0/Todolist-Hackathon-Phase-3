# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/todo_database

# For Neon PostgreSQL, use the connection string from your Neon dashboard
# Example: postgresql://user:pass@ep-xxxx.us-east-1.aws.neon.tech/dbname?sslmode=require

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-minimum-32-characters-long-for-security
JWT_ALGORITHM=HS256
JWT_EXPIRY_DAYS=7

# SMTP Email Configuration (Required for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@todoapp.com
SMTP_FROM_NAME=Todo App
SMTP_USE_TLS=true
SMTP_TIMEOUT=30

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Server Configuration
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security and Performance
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000